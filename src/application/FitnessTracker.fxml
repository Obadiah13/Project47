<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="273.0" prefWidth="399.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.FitnessTrackerController">
   <children>
      <HBox prefHeight="50.0" prefWidth="200.0">
         <children>
            <Label prefHeight="50.0" prefWidth="106.0" text="FitnessTracker" textAlignment="CENTER">
               <HBox.margin>
                  <Insets left="100.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <font>
                  <Font name="System Italic" size="15.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox prefHeight="58.0" prefWidth="232.0">
         <children>
            <Label text="Weight Goal:">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </Label>
            <Button mnemonicParsing="false" onAction="#weightGoalPlan" text="Set Weight Goal" />
            <Label fx:id="errorMessage">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
         </children>
      </HBox>
      <HBox prefHeight="58.0" prefWidth="232.0">
         <children>
            <Label text="Activity Plan:">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </Label>
            <Button mnemonicParsing="false" onAction="#excercisePlan" text="Set Activity Plan" />
         </children>
      </HBox>
      <HBox prefHeight="58.0" prefWidth="232.0">
         <children>
            <Label text="Nutrition Plan:">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </Label>
            <Button mnemonicParsing="false" onAction="#nutritionPlan" text="Set Nutrition Plan" />
         </children>
      </HBox>
      <HBox prefHeight="58.0" prefWidth="232.0">
         <children>
            <Label text="Sleep Plan:">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </Label>
            <Button mnemonicParsing="false" text="Set Sleep Plan" />
         </children>
      </HBox>
      <HBox prefHeight="58.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#checkProgress" text="Make Plan">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <ProgressBar prefWidth="200.0" progress="0.0" />
         </children>
      </HBox>
   </children>
</VBox>
